import os

def rename_images(folder_path, base_name="toolhead"):
    # 1. Check if folder exists
    if not os.path.exists(folder_path):
        print(f"Error: The folder '{folder_path}' does not exist.")
        return

    # 2. Get all files and filter for JPGs (case insensitive)
    files = [f for f in os.listdir(folder_path) if f.lower().endswith(('.jpg', '.jpeg', '.png'))]
    
    # 3. Sort files to ensure deterministic order
    files.sort()
    
    # 4. Loop and Rename
    count = 0
    for index, filename in enumerate(files, start=1):
        # Construct old and new file paths
        old_path = os.path.join(folder_path, filename)
        new_filename = f"{index}_{base_name}.jpg"
        new_path = os.path.join(folder_path, new_filename)
        
        # Rename
        try:
            os.rename(old_path, new_path)
            print(f"Renamed: {filename} -> {new_filename}")
            count += 1
        except OSError as e:
            print(f"Error renaming {filename}: {e}")

    print(f"--- Finished. Renamed {count} images. ---")

# --- Usage ---
# Replace this string with your actual path
target_folder = "temp/" 

rename_images(target_folder, base_name="clean")